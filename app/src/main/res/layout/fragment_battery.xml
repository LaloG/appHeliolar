<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:weightSum="24"
              android:background="#111112"
              tools:context="com.example.heliolar.principal.BatteryFragment">




    <LinearLayout
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="0dp">

        <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">

            <ImageView
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flecha_gris"
                    android:rotation="180"/>

        </LinearLayout>


        <RelativeLayout
                android:layout_weight="6"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">



            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/pb_movil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cpb_background_progressbar_color="#1a1a1a"
                    app:cpb_background_progressbar_width="4dp"
                    app:cpb_progressbar_color="#07c46b"

                    app:cpb_progressbar_width="4dp" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/movil_centro"/>

        </RelativeLayout>


        <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <ImageView
                    android:padding="10dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flecha_azul"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_regular"
                android:textColor="#fff"
                android:background="@drawable/bg_text_view_principla"
                android:textSize="15sp"
                android:text="Bateria del mÃ³vil"/>
    </LinearLayout>

    <LinearLayout
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="46sp"
                android:text="62%"/>

        <ImageView

                android:layout_marginStart="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/cargando"/>

    </LinearLayout>



    <LinearLayout
            android:layout_weight="5"
            android:weightSum="5"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp">


        <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        <RelativeLayout

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/pb_potencia"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cpb_background_progressbar_color="#1a1a1a"
                    app:cpb_background_progressbar_width="2dp"
                    app:cpb_progressbar_color="#07c46b"
                    android:layout_centerInParent="true"
                    app:cpb_progressbar_width="2dp" />



            <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1 w"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:fontFamily="@font/raleway_medium"
                    android:background="@drawable/bg_textview_redondo"/>

            <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/raleway_regular"
                    android:text="Potencia"/>

        </RelativeLayout>

        <RelativeLayout

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/pb_corriente"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cpb_background_progressbar_color="#1a1a1a"
                    app:cpb_background_progressbar_width="2dp"
                    app:cpb_progressbar_color="#1dd6ff"
                    android:layout_centerInParent="true"
                    app:cpb_progressbar_width="2dp" />



            <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="200 mA"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:fontFamily="@font/raleway_medium"
                    android:background="@drawable/bg_textview_redondo"/>

            <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/raleway_regular"
                    android:text="Corriente"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/pb_carga"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cpb_background_progressbar_color="#1a1a1a"
                    app:cpb_background_progressbar_width="2dp"
                    app:cpb_progressbar_color="#07c46b"
                    android:layout_centerInParent="true"
                    app:cpb_progressbar_width="2dp" />



            <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="30 min."
                    android:textColor="#fff"
                    android:textSize="14sp"

                    android:fontFamily="@font/raleway_medium"
                    android:background="@drawable/bg_textview_redondo"/>



            <TextView
                    android:id="@+id/txt"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/raleway_regular"
                    android:text="Carga Completa"/>

        </RelativeLayout>




    </LinearLayout>



